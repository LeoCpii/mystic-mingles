{
  "name": "@mingles/ui",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "leonardo.goncalves <leogoncalves.contato@gmail.com>",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*/index.js",
      "require": "./dist/*/index.js",
      "types": "./dist/*/index.d.ts"
    },
    "./style": "./dist/style/index.css",
    "./fonts": "./dist/style/fonts.css"
  },
  "scripts": {
    "rollup": "rollup -c",
    "build": "rimraf dist && npm run fonts && npm run style && npm run rollup",
    "watch": "rollup -c --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverage",
    "lint": "eslint --ext .ts,.tsx . --ignore-pattern '/dist'",
    "fonts": "mkdirp dist/fonts && cp -r fonts/* dist/fonts",
    "style": "mkdirp dist/style && cp -r style/* dist/style"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@mdx-js/react": "^1.6.22",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "8.3.3",
    "@storybook/addon-actions": "^7.4.6",
    "@storybook/addon-docs": "^7.4.6",
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-interactions": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-styling-webpack": "0.0.5",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.4.6",
    "@storybook/react-webpack5": "7.4.6",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "babel-jest": "^28.1.1",
    "babel-loader": "^8.3.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.18.0",
    "glob": "^10.3.10",
    "jest-cli": "^28.1.2",
    "postcss": "^8",
    "postcss-url": "^10.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.6",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sass": "^1.2.13",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.52.3",
    "sass-loader": "^13.0.0",
    "storybook": "7.4.6",
    "storybook-addon-sass-postcss": "^0.1.4",
    "style-loader": "^3.3.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "latest"
  },
